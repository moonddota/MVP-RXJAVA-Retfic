            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editteam_delete"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/selector_black_bg_nocorner"
                    android:text="@string/activity_teammanager_teamchange_btn__delete_name"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/editteam_sure"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/selector_green_bg_nocorner"
                    android:enabled="true"
                    android:text="@string/activity_teammanager_btn_createteam_btn_name"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:text="@string/error_login_failed_account_pwd_not_thesame"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp"
                android:visibility="invisible" />

        </LinearLayout>


        <View
            android:id="@+id/showBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_grey"
            android:visibility="invisible" />


        <com.itheima.wheelpicker.WheelPicker
            android:id="@+id/wheelPicker"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_gravity="bottom"
            android:background="#EEE"
            android:visibility="invisible"
            app:wheel_atmospheric="true"
            app:wheel_curved="true"
            app:wheel_cyclic="false"
            app:wheel_item_text_color="@android:color/darker_gray"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="@color/green4" />

    </FrameLayout>


</RelativeLayout>
