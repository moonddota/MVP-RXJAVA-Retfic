<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="10">


    <TextView
        android:id="@+id/setting_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="30dip"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/skylin_black"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/setting_right_fl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="30dip">

        <TextView
            android:id="@+id/setting_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/setting_iv_arrarow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@color/skylin_light_grey" />


</RelativeLayout>