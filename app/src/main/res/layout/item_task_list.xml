<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/main_iv_content"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_60"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/main_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_15"
        android:layout_marginTop="@dimen/px_11"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_28_px" />

    <TextView
        android:id="@+id/main_tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_20"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#999999"
        android:textSize="@dimen/text_size_22_px" />

</LinearLayout>